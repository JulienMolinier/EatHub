<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:visibility="visible">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/imageView" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    app:srcCompat="@drawable/icon" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listRestaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@color/searchFilter"
        android:visibility="visible">

        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/filter"
            android:textStyle="bold"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/checkBoxRate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/filter"
            android:layout_toEndOf="@id/filter"
            android:onClick="addListenerOnCheckBox"
            android:text="@string/checkboxRate" />


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxRate"
            android:layout_marginStart="10dp"
            android:text="@string/price"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignBaseline="@id/price"
            android:layout_alignLeft="@id/checkBoxRate"
            android:layout_toEndOf="@id/price"
            android:onClick="addListenerOnCheckBox"
            android:text="@string/checkbox10" />

        <CheckBox
            android:id="@+id/checkBox20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/checkBox10"
            android:layout_toEndOf="@id/checkBox10"
            android:onClick="addListenerOnCheckBox"
            android:text="@string/checkbox20" />

        <CheckBox
            android:id="@+id/checkBox30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/checkBox20"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/checkBox20"
            android:onClick="addListenerOnCheckBox"
            android:text="@string/checkbox30" />

    </RelativeLayout>


</RelativeLayout>